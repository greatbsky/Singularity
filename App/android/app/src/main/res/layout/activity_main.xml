<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.singularity.viewmodel.UserModel" />

        <!--<import tycom.singularity.utils.ActivityUtilils" />-->
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.user.name}"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> vm.click(view)}"
            android:text="Click me"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/txt"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.changeName()}"
            android:text="change name"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/btn1"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.getUser()}"
            android:text="get user"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/btn2"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.notifyHandler()}"
            android:text="Notify content"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/btn3"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.notifyContent}"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/btn4"
            app:layout_constraintTop_toBottomOf="@id/btn3"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.userAdd()}"
            android:text="User Add"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/btn4"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.userGet()}"
            android:text="User get"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/btn5"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.daotxt}"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/btn6"
            app:layout_constraintTop_toBottomOf="@id/btn5"/>

    </android.support.constraint.ConstraintLayout>
</layout>

